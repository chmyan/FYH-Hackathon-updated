{
  "manifest_version": 3,
  "name": "AI Screen Recorder & Tab Transcriber",
  "version": "1.0",
  "description": "Captures tab audio/video, produces transcripts, and generates notes.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AI Recorder & Transcriber"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabCapture"
  ],
  "optional_permissions": [
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
